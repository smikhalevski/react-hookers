{
  "name": "@smikhalevski/react-hooks",
  "version": "2.0.0",
  "description": "The set of opinionated general-purpose React hooks.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc && npm run rollup && npm run terser",
    "rollup": "rollup --external react --input ./lib/index.js --file ./lib/index-cjs.js --format cjs --plugin @rollup/plugin-node-resolve",
    "terser": "terser --compress --mangle toplevel --mangle-props keep_quoted --output ./lib/index-cjs.js -- ./lib/index-cjs.js",
    "clean": "rm -rf ./lib ./docs",
    "test": "jest --detectOpenHandles",
    "docs": "typedoc ./src/main/index.ts",
    "publish-docs": "[ -d ./docs ] && [[ ! $(git status --porcelain) ]] && branch=$(git rev-parse --abbrev-ref HEAD) && sha=$(git rev-parse --short HEAD) && t=$(mktemp -d) && cp -R ./docs/ $t && git checkout ghpages && ls -A | grep -wv .git | xargs rm -rf && cp -R $t/ . && git add . && git commit -m \"Updated docs ($sha)\" && git push && git checkout $branch",
    "release-docs": "npm run clean && npm run docs && npm run publish-docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/react-hooks.git"
  },
  "keywords": [
    "react",
    "hooks",
    "render"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/react-hooks/issues"
  },
  "homepage": "https://github.com/smikhalevski/react-hooks#readme",
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/jest": "^26.0.23",
    "jest": "^27.0.2",
    "node-abort-controller": "^2.0.0",
    "rollup": "^2.50.5",
    "terser": "^5.7.0",
    "ts-jest": "^27.0.2",
    "typedoc": "^0.21.2",
    "typescript": "^4.3.2"
  },
  "peerDependencies": {
    "react": "^16.14.0"
  }
}
